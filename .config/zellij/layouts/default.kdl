layout {
    new_tab_template {
        pane focus=true
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    tab name="EDITOR" hide_floating_panes=true {
        pane split_direction="vertical" {
            pane focus=true borderless=true command="hx"
        }
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
        floating_panes {
            pane
        }
    }
}
